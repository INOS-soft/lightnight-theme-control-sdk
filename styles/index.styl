@import 'animation'
@import 'skin'

article, aside, blockquote, body, button, code, dd, details, div, dl, dt, fieldset, figcaption, figure, footer, form, h1, h2, h3, h4, h5, h6, header, hgroup, hr, input, legend, li, menu, nav, ol, p, pre, section, td, textarea, th, ul, :before, :after
  margin 0
  padding 0
  box-sizing border-box
  animation appear 0.6s ease-out

html
  font-size $fontSize
  line-height $lineHeight
  scroll-behavior smooth

body
  font-family -apple-system, Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased

::-webkit-scrollbar
  height $scrollbarSize
  width $scrollbarSize
  background-color $scrollbarColorBack

::-webkit-scrollbar-thumb
  background-color $scrollbarColorFront
  border 0.25 * $scrollbarSize solid $scrollbarColorBack
  border-radius 0.5 * $scrollbarSize

.GlobalLayout
  color var(--clr-txt)
  background-color var(--clr-bg)
  ::selection
    color var(--clr-bg)
    background var(--clr-selection)

a
  text-decoration none
  color var(--clr-link)
  position relative
  &:before
    content ''
    position absolute
    bottom -1px
    right 0
    height 1px
    width 0
    background-color var(--clr-selection)
    transition width 0.5s
  &:hover:before
    left 0
    width 100%