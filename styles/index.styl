@import 'animation'
@import 'skin'

article, aside, blockquote, body, button, code, dd, details, div, dl, dt, fieldset, figcaption, figure, footer, form, h1, h2, h3, h4, h5, h6, header, hgroup, hr, input, legend, li, menu, nav, ol, p, pre, section, td, textarea, th, ul, :before, :after
  margin 0
  padding 0
  box-sizing border-box
  transition background 0.6s

html
  font-size $fontSize
  line-height $lineHeight
  scroll-behavior smooth
  overflow-x hidden
  overflow-y scroll

body
  font-family -apple-system, Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased

::-webkit-scrollbar
  height $scrollbarSize
  width $scrollbarSize
  background $scrollbarColorBack

::-webkit-scrollbar-thumb
  background $scrollbarColorFront
  border 0.25 * $scrollbarSize solid $scrollbarColorBack
  border-radius 0.5 * $scrollbarSize

.GlobalLayout
  color var(--txt)
  background var(--bg)
  ::selection
    color var(--bg)
    background var(--selection)

:not(.markdown-body) a
  text-decoration none
  color var(--link)
  position relative
  &:before
    content ''
    position absolute
    bottom -2px
    right 0
    height 2px
    width 0
    background var(--selection)
    transition width 0.5s
  &:hover:before
    left 0
    width 100%

.card
  background var(--bg)
  border-radius $borderRadius
  margin $gap 0